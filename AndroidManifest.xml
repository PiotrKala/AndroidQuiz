<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.quiz"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/netoperek"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="agh.edu.pl.quiz.activities.MainActivity_"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="agh.edu.pl.quiz.activities.FileExploringActivity_"
            android:label="@string/title_activity_file_exploring" >
        </activity>
        <activity
            android:name="agh.edu.pl.quiz.activities.QuestionActivity_"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize"
            android:label="@string/title_activity_question" >
        </activity>
        <activity
            android:name="agh.edu.pl.quiz.activities.FinishActivity_"
            android:label="@string/title_activity_finish" >
        </activity>
    </application>

</manifest>